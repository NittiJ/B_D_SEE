  filter(str_detect(Bdc_Program_DESCRIPTION, regex("FERTILITY", ignore_case = TRUE))) %>%
  distinct(Bdc_Program_DESCRIPTION) %>%
  arrange(Bdc_Program_DESCRIPTION)


